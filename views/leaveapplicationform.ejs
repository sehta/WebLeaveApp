<div class="dashbrd_page">
  <header>
    <link rel="stylesheet" type="text/css" href="https://cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css" media="all" />

    <h2>
      <a href="/users/dashboard">
        <i class="fa fa-angle-left" aria-hidden="true"></i>
      </a>
      <%=title%>
      <span>
        <%=message%>
      </span>
    </h2>
    <!--<nav class="top-bar" data-topbar="" role="navigation">
        <ul class="title-area">
          <li class="name">
            <a href="#"> <img class="logo01" src="image/login-page-logo.png" alt="logo"></a> 
          </li>
          
        </ul>
       </nav>-->
  </header>

  <div class="pending_listing">
    <div class="leave_form">
      <div class="widget-body register_form leave_app">
        <div class="panel-body">

          <form id="leaveform" name="leaveform" method="post" action="/users/applyleave" role="form" class="form-horizontal datepicker">
            <div class="form-group">
              <div class="sec_box">
                <div class="col-sm-12">
                  <select id="leavetypeid" name="leavetypeid" class="form-control">
                    <option value="">Leave Type</option>
                    <option value="1">Sick</option>
                    <option value="2">Casual</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="sec_box">
                <div class="col-sm-12">
                  <select id="leaveduration" name="leaveduration" class="form-control">
                    <option value="">Leave duration</option>
                    <option value="1">Full</option>
                    <option value="2">Half</option>
                    <option value="3">Short</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="date_sec date_from">
                      <input type="text" class="form-control" placeholder="From" id="leavefromdate" name="leavefromdate" />
                      <div class="date_icon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                      </div>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="date_sec">
                      <input type="text" class="form-control datepicker" placeholder="To" id="leavetodate" name="leavetodate" />
                      <div class="date_icon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <input type="text" class="form-control" placeholder="Reason" id="reason" name="reason" />
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12" >
                <input type="tel" class="form-control" placeholder="Contact Number" id="contactnumber" name="contactnumber" />
              </div>
            </div>
            <div class="form-group">
              <div class="sec_box">
                <div class="col-sm-12">
                  <select id="approvedby" name="approvedby"class="form-control">
                    <option value="">Approved By</option>
                    <% for(var x in approverlist) { %>
                    <option value=""
                      <%= approverlist[x]._id; %>">
                      <%= approverlist[x].firstname +' '+approverlist[x].lastname; %>
                    </option>
                    <% } %>

                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" class="form-control" placeholder="Address" id="address" name="address" />
              </div>
            </div>
            <div class="upload_file_top">
              <div class="row">
                <div class="col-sm-6">

                  <button onclick="document.getElementById('attachment').click();" type="button" class="cmpny_logoimg">

                    <div class="cmpny_img">
                      <i class="fa fa-paperclip" aria-hidden="true"></i>
                    </div>
                    <h3>Attach File</h3>
                    <input id="attachment" name="attachment" class="hide" type="file" />


                  </button>

                </div>
              </div>
            </div>
            <div class="col-sm-12 mt10">
              <div class="form-group">
                <button type="submit" class="btn btn-responsive btn-primary br0">Submit</button>
                <button type="submit" class="button2 br0 mt15">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>
<!--dashbrd_page-->
<script>
  $(function() {
  $("#leavefromdate").datetimepicker({
  format: 'DD-MM-YYYY'
  });
  $("#leavetodate").datetimepicker({
  format: 'DD-MM-YYYY'
  });
  $("#leaveform").validate({


  rules: {
  leavetypeid: "required",
  leaveduration: "required",
  leavefromdate: "required",
  leavetodate: "required",
  reason: "required",
  contactnumber: "required",
  approvedby: "required",
  address: "required",
  },


  messages: {
  leavetypeid: "Please enter Type",
  leaveduration: "Please enter Duration",
  leavefromdate: "Please enter Date",
  leavetodate: "Please enter Date",
  reason: "Please enter your valid reason",
  contactnumber: "Please enter your Contact Number",
  approvedby: "Please Select Approver Name",
  address: "Please enter your Address",
  },

  submitHandler: function(form) {
  if(form.valid)
  {
  form.submit();
  }
  }
  });
  });
</script>





